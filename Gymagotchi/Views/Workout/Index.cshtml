
@model Gymagotchi.ViewModels.WorkoutFormViewModel
@{
    ViewData["Title"] = "Add";
}
<h1>Add Workout</h1>

@using (Html.BeginForm("Add", "Workout"))
{
    @Html.ValidationSummary(true, "Fix fields to continue.")
    

    <div class="form-group">
        @Html.LabelFor(m => m.Exercises)
        @Html.TextBoxFor(m => m.Exercises, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Exercises)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Exercises)
        @Html.TextBoxFor(m => m.Exercises, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Exercises)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Description)
    </div>
    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Add</button>
}


